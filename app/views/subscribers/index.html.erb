<header class="alt" id="topbar">
	<div class="topbar-left">
		<ol class="breadcrumb">
			<li class="crumb-link">
				<a href="<%= dashboard_vacancies_path %>">Dashboard</a>
			</li>
			<li class="crumb-trail">Subscribers</li>
		</ol>
	</div>
</header>

<section id="content" class="table-layout">
	<div class="tray tray-center">
		<% if notice %>
			<div class="alert alert-success alert-dismissable">
				<button data-dismiss="alert" class="close" type="button">
					<i class="ace-icon fa fa-times"></i>
				</button>

				<i class="fa fa-info"></i>
				<%= notice %>
			</div>
			<div class="space-10 notice-margin"></div>
		<% end %>

		<%= will_paginate @subscribers, renderer: BootstrapPagination::Rails, :class => 'custom-pagination' %>
		
		<div class="panel" style="border: none;">
			<div class="panel-heading">
				<span class="panel-title">
					<span class="fa fa-user"></span>Current subscribers
				</span>
			</div>
			<div class="panel-body pn">
				<table id="vacancies-table" class="table table-hover table-responsive">
					<thead>
						<tr>
							<th>#</th>
							<th>Name</th>
							<th>Email</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @subscribers.each do |subscriber| %>
							<tr>
								<td></td>
								<td><%= subscriber.subscriber_name %></td>
								<td><%= subscriber.subscriber_email %></td>
								<td>
									<a class="btn btn-sm btn-info" type="button" href="<%= edit_subscriber_path(subscriber) %>">
										<i class="fa fa-pencil"></i>
									</a>
									<%= link_to raw('<i class="fa fa-trash"></i>'), subscriber_path(subscriber), :method => :delete, :class => 'btn btn-sm btn-danger', :data => { confirm: 'Are you sure you want to delete this subscriber?' } %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</section>