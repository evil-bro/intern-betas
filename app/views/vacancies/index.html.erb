		<div class="container">
			<a class="btn btn-default btn-lg btn-load-more">+ Load more</a>
		</div>
	</div>	
</section>

<div class="modal fade" id="apply-form" tabindex="-1" role="dialog" aria-labelledby="vacancyFormLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="vacancyFormLabel">Company</h4>
			</div>
			<div class="modal-body">
				<div class="row modal-form-messages">
					<div id="system-message" class="col-xs-12 alert alert-success">
						<p class="text-center"><strong>Well done! </strong>Request has been sent</p>
					</div>

					<div id="system-error" class="col-xs-12 alert alert-danger">
						<p class="text-center"><strong>Error! </strong></p>
					</div>
				</div>

				<form id="vacancy-form" class="modal-form" action="/candidates" method="post" data-remote="true" accept-charset="UTF-8">
					<div class="form-group">
						<input type="text" id="candidate-name" class="form-control input-box" placeholder="Name" name="candidate[candidate_name]">
						<input type="hidden" id="vacancy_id" name="candidate[vacancy_id]" value="">
					</div>
					<div class="form-group">
						<input type="text" id="candidate-email" class="form-control input-box" placeholder="Email" name="candidate[candidate_email]">
					</div>
					<div class="form-group">
						<input type="text" id="candidate-phone" class="form-control input-box" placeholder="Phone" name="candidate[candidate_phone]">
					</div>
					<div class="form-group no-space-bottom">
						<textarea id="about-candidate" class="form-control input-box" placeholder="About you" name="candidate[candidate_about]"></textarea>
					</div>
					<div class="form-group space-bottom-10">
						<button type="submit" class="btn btn-default btn-turq">Submit</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>