<section class="vacancies">
	<div class="container">
		<% @vacancies.each do |vacancy | %>
			<div class="row vacancy-item">
				<div class="col-lg-1 text-center space-bottom-20">
					<a>
						<%= image_tag(vacancy.vacancy_company_logo, :class => 'img-responsive center-block') %>
					</a>
				</div>
				<div class="col-lg-7 space-bottom-20">
					<div class="row">
						<div class="col-sm-6">
							<h2><%= vacancy.vacancy_company_name %></h2>
							<h4><a><%= @types[vacancy.vacancytype_id] %> </a></h4>
							<h4><i class="fa fa-map-marker"></i> Remote</h4>
						</div>
						<div class="col-sm-6 text-center vacancy-salary">
							<h2>$<%= number_with_delimiter(vacancy.vacancy_salary) %></h2>
						</div>
					</div>
				</div>
				<div class="col-lg-2 share-vacancy text-center">
					<span class="label label-default">FACEBOOK</span>
					<span class="label label-default">ADS</span>
					<span class="label label-default">SEO</span>
				</div>
				<div class="col-lg-2 apply-to-vacancy">
					<a class="btn btn-default btn-xlg apply-btn" data-toggle="modal" data-target="#apply-form" vacancy-id="<%= vacancy.id %>">APPLY</a>
				</div>
				<div class="row vacancy-learn-more" style="display: none;">
					<div class="col-xs-12">
						<h3><%= vacancy.vacancy_company_name %></h3>
						<% vacancy.tags.each do |tag| %>
							<span class="label label-turq"><%= tag.tag_title %></span>
						<% end %>
						<p class="text-left">
							<%= vacancy.vacancy_description %>
						</p>
					</div>
				</div>
				<div class="row space-top-10">
					<div class="col-xs-12 text-center">
						<a class="btn btn-default btn-xlg btn-turq learn-more">Learn more</a>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</section>
<% if @vacancies.count > 10 %>
	<section class="separator-two load-more-section">
		<div class="color-overlay">
			<div class="container">
				<a class="btn btn-default btn-lg btn-load-more">+ Load more</a>
			</div>
		</div>
	</section>
<% end %>
<div class="modal fade" id="apply-form" tabindex="-1" role="dialog" aria-labelledby="vacancyFormLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="vacancyFormLabel">Company</h4>
			</div>
			<div class="modal-body">
				<div class="row modal-form-messages">
					<div id="system-message" class="col-xs-12 alert alert-success">
						<p class="text-center"><strong>Well done! </strong>Request has been sent</p>
					</div>

					<div id="system-error" class="col-xs-12 alert alert-danger">
						<p class="text-center"><strong>Error! </strong></p>
					</div>
				</div>

				<form id="vacancy-form" class="modal-form" action="/candidates" method="post" data-remote="true" accept-charset="UTF-8">
					<div class="form-group">
						<input type="text" id="candidate-name" class="form-control input-box" placeholder="Name" name="candidate[candidate_name]">
						<input type="hidden" id="vacancy_id" name="candidate[vacancy_id]" value="">
					</div>
					<div class="form-group">
						<input type="text" id="candidate-email" class="form-control input-box" placeholder="Email" name="candidate[candidate_email]">
					</div>
					<div class="form-group">
						<input type="text" id="candidate-phone" class="form-control input-box" placeholder="Phone" name="candidate[candidate_phone]">
					</div>
					<div class="form-group no-space-bottom">
						<textarea id="about-candidate" class="form-control input-box" placeholder="About you" name="candidate[candidate_about]"></textarea>
					</div>
					<div class="form-group space-bottom-10">
						<button type="submit" class="btn btn-default btn-xlg apply-btn">SUBMIT</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>